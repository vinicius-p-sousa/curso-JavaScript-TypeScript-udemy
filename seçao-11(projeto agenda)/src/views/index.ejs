<%- include('includes/head') %>
<%- include('includes/navbar') %>

<div class="container">
  <div class="row">

    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda de <%= user.username %> </h1>
      <%- include('includes/messages') %>
      <% if (contacts.length > 0) { %>
      <div class="responsive-table">
        <table class="table my-3">
          <p class="text-center lead">seus contatos estão abaixo</p>
          <% contacts.forEach( contact => { %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.surname %></td>
              <td><%= contact.email %></td>
              <td><%= contact.tel %></td>
              <td><a href="/contact/edit/<%= contact._id %>">Editar</a></td>
              <td><a class='text-danger' href="/contact/delete/<%= contact._id %>">Excluir</a></td>
              </tr>
          <% }) %>
          </table>
      </div>
      <% } else {%>
      <p class="text-center lead">Não existem contatos na sua agenda</p>
      <% } %>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>